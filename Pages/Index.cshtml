@page
@model IndexModel
@{
    ViewData["Title"] = "Acid december";
}

<div class="text-center container">
    <h1>ACID DECEMBER</h1>

    <div class="container">

        <div class="row">
            <div class="col-12">
                <p>Please email acid@datapop.se Attach your audio in the mail with a picture if you want. Download links
                    are cool if the files are big. Don't forget to write your name and add a link to your web. <3 </p>
            </div>

            @foreach (var song in Model.Songs)
            {
                <div class="col-12 padd">

                    <p>
                        <img class="float-start  border-dark"
                            src="https://storage.googleapis.com/acid-december2012/2023/@song.ImageLink" />
                    <h2>@song.Title</h2>
                    <h3>@song.Artist</h3>
                    <p><a href="@song.Artistlink">More</a></p>
                    </p>

                </div>


            }
        </div>
    </div>
